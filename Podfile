  pod 'FirebaseUI/Phone'
  pod 'Firebase/Crashlytics'

  target 'SalsaddictTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'SalsaddictUITests' do
    # Pods for testing
  end

end
